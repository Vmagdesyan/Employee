@model IEnumerable<EmployeeList.Models.Employee>
<link type="text/css" rel="stylesheet" href="../../Content/Site.css" />
@{
    ViewBag.Title = "Поиск сотрудника";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Поиск сотрудника</h2>

@using (Html.BeginForm())
{
        <table>
            <tr>
                <th>ФИО</th>
                <th>Дата рождения</th>
                <th>Дата приема на работу</th>
                <th>Должность</th>
                <th>Отдел</th>
                <th>E-Mail</th>
                <th>Телефон</th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FIO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Birthday)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateInPost)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Position.NamePost)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EMail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TelNumber)
                    </td>
                    <td>
                        @Html.ActionLink("Редактировать", "Edit", new { id = item.Id })
                        @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                    </td>
                </tr>

            }
        </table>
}
<div>
    <form method="post">
        @Html.Label("ФИО")<br />
        @Html.TextBox("searchFIO")<br />
        @Html.Label("Должность")<br />
        @Html.TextBox("searchPosition")<br />
        <input type="submit" value="Искать" />  
    </form>
    @Html.ActionLink("Сбросить параметры", "Search")
    @Html.ActionLink("К списку сотрудников", "Index")
</div>